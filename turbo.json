{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "start": { "cache": false },
    "check-types": { "dependsOn": ["^check-types"] },
    "lint": { "dependsOn": ["^lint"] }
  },
  "globalEnv": ["API_URL", "API_SEARCH_URL", "API_KEY"]
}
